{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "ion",
	"scopeName": "source.ion", 
	"patterns": [
		{
			"include": "#comments"
		}, 
		{
			"include": "#strings"
		}, 
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"match": "//[\\w\\W]*", 
					"name": "comment.line.double-slash.ion"
				}, 
				{
					"begin": "/\\*", 
					"end": "\\*/", 
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.ion"
						}
					}, 
					"name": "comment.block.ion"
				}
			]
		}, 
		"strings": {
			"patterns": [
				{
					"match": "\\bnull\\.string\\b", 
					"name": "string.null.ion"
				}, 
				{
					"begin": "\"", 
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.ion"
						}
					}, 
					"end": "[\"\\n]", 
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.ion"
						}
					}, 
					"name": "string.quoted.double.ion", 
					"patterns": [
						{
							"include": "#escape"
						}
					]
				}, 
				{
					"begin": "\\'\\'\\'",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.string.begin.ion"
						}
					}, 
					"end": "\\'\\'\\'", 
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.string.end.ion"
						}
					}, 
					"name": "string.quoted.triple.ion", 
					"patterns": [
						{
							"include": "#escape"
						}
					]
				}
			]
		}, 
		"numbers": {
			"patterns": [
				{
					"match": "\\b(?:null.int|null.decimal|null.float)\\b", 
					"name": "constant.numeric.null.ion"
				}, 
				{
					"match": "-?0[bB][01](?:_?[01])*", 
					"name": "constant.numeric.bin_integer.ion"			
				}, 
				{
					"match": "-?0[xX][\\h](?:_?[\\h])*", 
					"name": "constant.numeric.hex_integer.ion"	
				}, 
				{
					"match": "-?\\d", 
					"name": "constant.numeric.dec_integer.ion"	
				}, 
				{
					"match": "(?i:(?:[+-]inf|nan))\\b", 
					"name": "constant.numeric.special_float.ion"	
				}
			]
		}, 
		"escape": {
			"patterns": [
				{
					"match": "\\\\(?:[0abtnfrv/\"\\'\\?\\\\]|NL|x[\\h]{2}|u[\\h]{4}|U[\\h]{8})", 
					"name": "constant.character.escape.ion"
				}, 
				{
					"match": "\\\\.", 
					"name": "invalid.illegal.unrecognized-string-escape.ion"
				}
			]
		}
	}
}


